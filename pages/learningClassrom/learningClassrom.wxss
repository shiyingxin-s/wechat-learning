/* pages/learnings/learningClassrom/learningClassrom.wxss */

page {
  background: #f3f3f3;
}

.videoBox {
  width: 100%;
}

.videoBox video {
  width: 100%;
}

.module1 {
  display: flex;
  flex-direction: row;
  padding: 20rpx 58rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.module1 view {
  height: 60rpx;
  width: 27.3%;
  border: 1px solid #4488fd;
  color: #4488fd;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module2 {
  display: flex;
  flex-direction: column;
}

.module2 .module2-title {
  height: 58rpx;
  display: flex;
  align-items: center;
  padding: 0 40rpx;
}

.module2 .module2-content1 {
  margin-top: 7rpx;
  padding: 40rpx;
  display:inline-block;
  background:#fff;
}

.module2 .module2-content1 .fontBox{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  background: #fff;
  white-space: nowrap;
}

.module2 .module2-content1 .font{
  width:20%;
  display: inline-block;
  align-items: center;
  justify-content: center;
  height:120rpx;
  line-height: 120rpx;
  text-align: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.module2 .module2-content1 .font view{
  width:120rpx;
  display: inline-block;
  align-items: center;
  justify-content: center;
  height:120rpx;
  line-height: 120rpx;
  text-align: center;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  font-size: 84rpx;
  font-family:SimSun;
}

.module2 .module2-content2 {
  margin-top: 7rpx;
  display: flex;
  flex-direction: column;
}

.module2 .module2-content2 .top {
  display: flex;
  padding: 21rpx 40rpx;
  background: #fff;
  margin-top: 7rpx;
}

.module2 .module2-content2 .top .lt {
writing-mode: tb-rl;
  width: 68rpx;
  background: #3f9ee1;
  color:#fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.module2 .module2-content2 .top .rt {
  flex: 1;
  display: flex;
  justify-content: space-between;
}

.module {
  width: 33%;
  display: flex;
  align-items: center;
  flex-direction: column;
  height: 220rpx;
  justify-content: center;
  box-sizing: border-box;
  background: #ebf5fc;
  border-left: 1px solid #3f9ee1;
}

.module .module-top {
  margin-bottom: 40rpx;
  color:#3f9ee1;
}

.videoBox{width: 100%;}
.videoBox video{width: 100%;}

.hoverClass{
  color:#4488fd;
}