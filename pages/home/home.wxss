/* pages/home/home.wxss */
.swiper-item {
    display: block;
    height: 150px;
    color: #353535;
    font-size: 18px;
    max-height: 320px;
    overflow: hidden;
}
.s_img{
    width: 100%;
}

.notice{
    padding: 25rpx;
    color: #424242;
}
.n_text{
    font-size: 26rpx;
    font-weight: 400;
    margin-left: 15rpx;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.g_img{
    width: 104rpx;
    height: 104rpx;
    margin-bottom: 20rpx;
}
.g_text{
    color: #3B3B40;
    font-size: 24rpx;
}
.introduce,.photo{
    padding: 25rpx;
}
.in_title, .p_title{
    color: #3B3B40;
    font-size: 32rpx;
    font-weight: 500;
    margin-bottom: 15rpx;
}
.in_text{
    color: #808080;
    line-height: 26px;
    text-indent: 1em;
    overflow:hidden;
    text-overflow:ellipsis;
    -webkit-line-clamp: 4;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    margin-bottom: 25rpx;
}
.video_box .myVideo{
    border-radius: 10px;
    width: 100%;
}
.photo_box{
    display: block;

}
.p_item{
    width: 46%;
    display: inline-block;
    text-align: center;
    height: 100px;
    margin-right: 7px;
    margin-left: 8px;
    margin-top: 15px;
}
.p_img{
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
}  

.service{
    width: 116rpx;
    height: 116rpx;
    text-align: center;
    line-height: 116rpx;
    border-radius: 50%;
    box-shadow: 0px 4px 9px 0px rgba(11, 2, 5, 0.15);
}
.scan{
    padding: 15px;
    text-align: center;
    width: 60rpx;
    height: 150rpx;
    bottom: 120px !important;
    background-color: #e5313f;
    color: #ffffff;
    border-radius: 30px;
}
.scan_icon{
    font-size: 30px;
}
.scan_text{

}
.bottom_float{
    position: fixed;
    bottom: 40px;
    right: 25px;
}