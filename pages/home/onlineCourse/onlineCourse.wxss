/* pages/home/onlineCourse/onlineCourse.wxss */
.course-type-box{
    background-color: #ffffff;
    border-top: 1px solid #f4f4f4;
}
.ct-title, .v-title{
    margin: 15rpx 26rpx 0;
    font-size: 16px;
    font-weight: 600;
    color: #4D4D4D;
    line-height: 44px;
}
.ct-list, .v-list{
    padding: 0 12rpx 25rpx;
}
.ct-l-text, .v-l-text{
    margin-top: 20rpx;
    font-size: 14px;
    color: #4D4D4D;
}
.ct-l-item, .v-l-item{
    border-radius: 10px;
    box-shadow: 0px 3px 16px 0px rgba(98, 87, 87, 0.35);
    width: 46%;
    display: inline-block;
    text-align: center;
    height: 200rpx;
    margin-right: 7px;
    margin-left: 8px;
    margin-top: 15px;
}
.ct-l-img, .v-l-img{
    border-radius: 10rpx;
    width: 100%;
    height: 100%;
}

.video-box{
    margin-top: 10rpx;
    background-color: #ffffff;
}
.v-l-item{
    box-shadow: unset
}
.myVideo{
    border-radius: 10px;
    width: 100%;
    height: 190rpx;
}