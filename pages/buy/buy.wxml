<!--购买课程.wxml-->
<myHeader id="myHeader" navbar-data='{{nvabarData}}'></myHeader>
<view class="container" style='margin-top:{{viewHeight* 2 + 30}}px'>
    <view class="b-con">
        <h2>六年级 (下册)</h2>
        <label>
            <text>人教部编</text>
            <text>共16课时</text>
            <text>188字</text>
        </label>
        <text>￥100</text>
    </view>
    <block>
        <image class="b-Img" src="../../images/common/buy.png" ></image>
        <view class="b-input bgColor">
            <input maxlength="11" type="number" placeholder="手机号"  auto-focus/>
            <label>必填</label>
        </view>
        <view class="b-input bgColor">
            <input type="text" placeholder="备注：本人使用；赠送他人" />
            <label>必填</label>
        </view>
    </block>
    <footer>
        <view class="b-footer bgColor" style="height:{{viewHeight*2}}px;">
            <label>
                <text>总金额：</text>
                <text>￥100</text>
            </label>
            <button>确认支付</button>
        </view>
    </footer>
</view>

