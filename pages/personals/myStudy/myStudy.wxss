/* pages/personals/myStudy/myStudy.wxss */
.top-box{
    background-color: #ffffff;
    height: 300rpx;
    display: flex;
    border-top: 1px solid #f4f4f4;
}
.top-item{
    flex: 1;
    text-align: center;
    margin-top: 90rpx;
}
.top-num{
    font-size: 36px;
    font-weight: bold;
    color: #000000;
    line-height: 44px;
}
.top-text{
    font-size: 14px;
    font-weight: 400;
    color: #808080;
    line-height: 22px;
}
.study-record-box{
    background-color: #ffffff;
    margin-top: 10rpx;
    padding: 25rpx;
}
.sr-list{
    margin-top: 20rpx;
}
.sr-title, .bc-title{
    vertical-align: 6rpx;
    padding-left: 10rpx;
    font-size: 18px;
    font-weight: bold;
    color: #4D4D4D;
    line-height: 44px;
}
.sr-more{
    float: right;
    color: #4D4D4D;
    margin-top: 20rpx;
}
.sr-more text{
    vertical-align: 4rpx;
    padding-right: 5rpx;
}
.scroll-view_H{
    white-space: nowrap;
}
.sr-l-item{
    position: relative;
    width: 200rpx;
    display: inline-block;
    margin-right: 10px;
}
.sr-l-img{
    width: 200rpx;
    height: 120rpx;
    background: #FAFAFA;
    border-radius: 10px;
}
.sr-l-text{
    width: 200rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    font-size: 14px;
    font-weight: 400;
    color: #4D4D4D;
    line-height: 24px;
}
.sr-l-tag{
    position: absolute;
    line-height: 32rpx;
    background: #E73440;
    opacity: 0.8;
    border-radius: 5px;
    bottom:30px;
    width: 198rpx;
    text-align: center;
    font-size: 12px;
    color: #ffffff;
}
.buy-course-box{
    background-color: #ffffff;
    margin-top: 10rpx;
    padding: 15rpx;
}
.bc-top{
    padding: 0 5rpx;
}
.bc-l-item {
    width: 46%;
    display: inline-block;
    text-align: center;
    height: 100px;
    margin-right: 7px;
    margin-left: 8px;
    margin-top: 15px;
    box-shadow: 0px 0px 6px 0px rgba(11, 2, 5, 0.15);
    border-radius: 10px;
}
.bc-l-img{
    width: 100%;
    height: 100%;
}
.bc-l-text{
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    font-size: 14px;
    font-weight: 400;
    color: #4D4D4D;
    line-height: 24px;
}